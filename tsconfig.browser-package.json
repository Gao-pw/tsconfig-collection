{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": false,
    "tsBuildInfoFile": "./.build/tsconfig.browser-package.tsbuildinfo",
    "incremental": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  }
}
